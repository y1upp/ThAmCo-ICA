@model IEnumerable<ThAmCo.Events.Data.GuestBooking>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Guests</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Guest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                Booking Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Guest.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Title)
                </td>
                <td>
                    <!-- Display Booking Date -->
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GuestBookingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GuestBookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GuestBookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>