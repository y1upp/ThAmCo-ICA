@model ThAmCo.Events.Data.Staff

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this staff member?</h3>
<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <!-- Display details of the staff entity -->

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StaffFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StaffFirstName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <!-- Add similar sections for other properties -->

    </dl>

    <form asp-action="Delete" asp-route-id="@Model.StaffId" method="post">
        <!-- Include a hidden field for StaffId -->
        <input type="hidden" asp-for="StaffId" />

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}