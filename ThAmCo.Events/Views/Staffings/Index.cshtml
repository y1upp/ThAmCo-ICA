@model IEnumerable<ThAmCo.Events.ViewModels.StaffingViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Staff Attending Corresponding Events</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Staff First Name
            </th>
            <th>
                Staff Last Name
            </th>
            <th>
                Staff Email
            </th>
            <th>
                Staff Phone Number
            </th>
            <th>
                Event Title
            </th>
            <th>
                Assignment Date
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StaffingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StaffingId">Details</a> |
                    <a asp-action="RemoveStaffFromEvent" asp-route-id="@item.StaffingId">Remove Staff from Event</a>
                </td>
            </tr>
        }
    </tbody>
</table>