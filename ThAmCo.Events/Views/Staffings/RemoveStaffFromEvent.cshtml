@model ThAmCo.Events.ViewModels.StaffingViewModel

@{
    ViewData["Title"] = "Remove Staff From Event";
}

<h1>Remove Staff From Event</h1>

<h3>Are you sure you want to remove this staff member from the event?</h3>
<div>
    <h4>Staffing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Assignment Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignmentDate)
        </dd>

        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <!-- Add similar sections for other properties -->
    </dl>

    <form asp-action="ConfirmRemoveStaffFromEvent" asp-route-id="@Model.StaffingId" method="post">
        <!-- Include a hidden field for StaffingId -->
        <input type="hidden" asp-for="StaffingId" />

        <div class="form-group">
            <input type="submit" value="Remove Staff From Event" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}